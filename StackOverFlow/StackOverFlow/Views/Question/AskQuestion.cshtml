@model BlogModel
@{
    ViewData["Title"] = "Ask Question";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div>
    <div class="text-center">
        <h1> Add Question </h1>
    </div>
    <div>
        <form asp-action="AskQuestion" asp-controller="Question" enctype="multipart/form-data">
                <br />
            <div class="form-group row">
                <label for="staticEmail" class="col-sm-2 col-form-label">Title</label>
                <div class="col-sm-10">
                    <input type="text" asp-for="Title" class="form-control-plaintext" id="staticEmail" placeholder="Enter Title">
                </div>
            </div>
                <br />
            <div>
                <label>Category</label>
                <div class="mt-1">
                    <select asp-for="CategoryId" class="form-control">
                        <option value=''> - Select Category - </option>
                        @foreach (var item in ViewBag.Category)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                </div>
            </div>

            <br />

            <div class="form-group row">
                <label for="staticEmail" class="col-sm-2 col-form-label">Description</label>
                <div class="col-sm-10">
                    <input type="text" asp-for="Description" class="form-control-plaintext" id="staticEmail" placeholder="Enter Title">
                </div>
            </div>
            <br /><br />
            <button type="submit" class="btn btn-success">Create Question </button>
        </form>
    </div>
</div>