<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Techverse</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/StackOverFlow.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Admin Techverse</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarColor02">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link active" href="~/Home/Index">
                                Client-Home
                                <span class="visually-hidden">(current)</span>
                            </a>                            
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" asp-controller="Category" asp-action="Manage"> Categories </a>                        
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" asp-controller="Question" asp-action="Index"> Questions </a>                        
                        </li>
                    </ul>
                    <form class="d-flex">
                        <a class="btn btn-sm text-warning btn-outline-warning" href="#"> @ViewBag.UserName </a>
                        &nbsp;&nbsp;  <a asp-action="Logout" asp-controller="User" class="btn btn-sm btn-outline-danger"> Logout </a>
                    </form>
                </div>
            </div>
        </nav>
    </header>

    <br />

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted text-center">
        <div class="container ">
            &copy; @DateTime.Now.ToString("dddd, dd MMMM yyyy") - Techverse - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
